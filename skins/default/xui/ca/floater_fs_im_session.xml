<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater show_title="true" name="panel_im">
	<layout_stack name="ls_control_panel">
		<layout_panel name="gprofile_panel">
			<button name="group_info_btn" tool_tip="Mostrar el perfil d'aquest grup"/>
		</layout_panel>
		<layout_panel name="profile_panel">
			<button name="view_profile_btn" tool_tip="Mostrar el perfil d'aquest resident"/>
		</layout_panel>
		<layout_panel name="friend_panel">
			<button tool_tip="Fer-se amics" name="add_friend_btn"/>
		</layout_panel>
		<layout_panel name="tp_panel">
			<menu_button name="teleport_btn" tool_tip="Oferir o demanar una teleportació"/>
		</layout_panel>
		<layout_panel name="share_panel">
			<button tool_tip="Enviar un objecte a aquest resident" name="share_btn"/>
		</layout_panel>
		<layout_panel name="pay_panel">
			<button tool_tip="Enviar diners a aquest resident" name="pay_btn"/>
		</layout_panel>
		<layout_panel name="call_btn_panel">
			<button tool_tip="Trucada vocal" name="call_btn"/>
		</layout_panel>
		<layout_panel name="end_call_btn_panel">
			<button tool_tip="Penjar" name="end_call_btn"/>
		</layout_panel>
		<layout_panel name="voice_ctrls_btn_panel">
			<button tool_tip="Propietats àudio" name="voice_ctrls_btn"/>
		</layout_panel>
		<layout_panel name="im_history_btn_panel">
			<button tool_tip="Mostrar les últimes transcripcions d'aquesta conversació." name="im_history_btn"/>
		</layout_panel>
		<layout_panel name="add_participant_panel">
			<button tool_tip="Convidar algú a aquesta conversació" name="add_participant_btn"/>
		</layout_panel>
		<layout_panel name="send_sysinfo_btn_panel">
			<button tool_tip="Enviar infos sistema" name="send_sysinfo_btn"/>
		</layout_panel>
		<layout_panel name="lp_options_btn">
			<menu_button tool_tip="Opcions del xat" name="chat_options_btn"/>
		</layout_panel>
		<layout_panel name="support_panel" width="135">
			<icon name="dummy_icon_support_group" width="133"/>
			<check_box label="Afegir la versió" name="FSSupportGroupChatPrefix_toggle" tool_tip="Afegeix la versió actual del visor, l'aparença del visor, el sistema operatiu i l'estat de RLVa al principi dels missatges que envias a aquest grup, cosa que ajudarà el personal d'assistència a diagnosticar correctament els teus problemes i millorarà la precisió a l'hora de respondre a les teves preguntes."/>
		</layout_panel>
	</layout_stack>
	<layout_stack name="chat_stack">
		<layout_panel name="panel_im_control_lp">
			<layout_stack name="im_panels">
				<layout_panel name="unread_messages_holder">
					<text name="unread_messages_text">Missatges no llegits : [NUM]</text>
				</layout_panel>
				<layout_panel name="chat_layout_panel">
					<layout_stack name="input_panels">
						<layout_panel name="emoji_button_layout_panel">
							<button name="emoji_picker_toggle_btn" tool_tip="Mostra el panell d'emojis"/>
							<button name="emoji_recent_panel_toggle_btn" tool_tip="Mostra/amaga els emojis recents"/>
						</layout_panel>
						<layout_panel name="input_button_layout_panel">
							<button name="send_chat" label="Enviar" tool_tip="Envia el missatge"/>
						</layout_panel>
						<layout_panel name="emoji_recent_layout_panel">
							<text name="emoji_recent_empty_text">
								Els emojis utilitzats recentment apareixeran aquí
							</text>
						</layout_panel>
					</layout_stack>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
